#include "Cell.h"
using namespace std;
using namespace Eigen;


NeighborIter::NeighborIter(boost::shared_ptr<Cell>& cell_in, boost::shared_ptr<Sublattice>& sublattice1_in, boost::shared_ptr<Sublattice>& sublattice2_in, double min, double max)
{
    neighbors = cell_in->get_neighbors(sublattice1_in,sublattice2_in,min,max);
    iter = neighbors->begin();
}

void NeighborIter::First()
{
    iter = neighbors->begin();
}

void NeighborIter::Next()
{
    assert(!IsDone());
    ++iter;
}

bool NeighborIter::IsDone()
{
    return iter == neighbors->end();
}

vector<double> NeighborIter::CurrentItem()
{
    assert(!IsDone());
    return *iter;
}